{
    "extends": "@apify/tsconfig",
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ESNext",
            "DOM",
            "ES2020"
        ],
        "baseUrl": ".",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "resolveJsonModule": false,
        "noUnusedLocals": false
    },
    "include": [
        "./packages/*/src/**/*"
    ],
    "exclude": [
        "**/node_modules",
        "**/dist"
    ]
}

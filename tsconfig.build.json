{
    "extends": "@apify/tsconfig",
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "baseUrl": ".",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "resolveJsonModule": false,
        "noUnusedLocals": false,
        "outDir": "build",
        "paths": {
            "apify": ["packages/apify/src"]
        }
    },
    "include": [
        "./packages/*/src/**/*"
    ]
}

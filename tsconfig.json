{
    "extends": "./tsconfig.build.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "apify": ["packages/apify/src"],
            "@apify/scraper-tools": ["packages/scraper-tools/src"],
            "@apify/storage-local": ["packages/storage-local/src"],
            "crawlers": ["packages/crawlers/src"],
            "@crawlers/basic": ["packages/basic-crawler/src"],
            "@crawlers/browser": ["packages/browser-crawler/src"],
            "@crawlers/cheerio": ["packages/cheerio-crawler/src"],
            "@crawlers/playwright": ["packages/playwright-crawler/src"],
            "@crawlers/puppeteer": ["packages/puppeteer-crawler/src"],
            "@crawlers/*": ["packages/*/src"],
        }
    }
}

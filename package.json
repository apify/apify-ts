{
    "name": "apify",
    "private": true,
    "engines": {
        "node": ">=15.10.0"
    },
    "workspaces": [
        "packages/*",
        "packages/actor-scraper/*"
    ],
    "keywords": [
        "apify",
        "headless",
        "chrome",
        "puppeteer",
        "crawler",
        "scraper"
    ],
    "author": {
        "name": "Apify",
        "email": "support@apify.com",
        "url": "https://apify.com"
    },
    "contributors": [
        "Jan Curn <jan@apify.com>",
        "Marek Trunkat <marek@apify.com>",
        "Ondra Urban <ondra@apify.com>"
    ],
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/apify/apify-js"
    },
    "scripts": {
        "postinstall": "npx husky install",
        "prepublishOnly": "turbo run copy",
        "clean": "turbo run clean",
        "build": "turbo run build",
        "ci:build": "turbo run build --cache-dir=\".turbo\"",
        "test": "jest --silent",
        "test:e2e": "node test/e2e/run.mjs",
        "coverage": "jest --coverage",
        "release": "npm run build && lerna version patch && lerna publish from-package --contents dist",
        "lint": "eslint packages/*/src test",
        "lint:fix": "eslint packages/*/src test --fix"
    },
    "turbo": {
        "baseBranch": "origin/master",
        "pipeline": {
            "build": {
                "dependsOn": [
                    "^build"
                ],
                "outputs": [
                    "dist/**"
                ]
            },
            "copy": {
                "dependsOn": [
                    "^build"
                ],
                "outputs": [
                    "dist/**"
                ]
            },
            "clean": {
                "outputs": []
            }
        }
    },
    "devDependencies": {
        "@apify/eslint-config-ts": "^0.2.3",
        "@apify/tsconfig": "^0.1.0",
        "@commitlint/config-conventional": "^13.1.0",
        "@types/content-type": "^1.1.5",
        "@types/domhandler": "^2.4.2",
        "@types/express": "^4.17.13",
        "@types/fs-extra": "^9.0.13",
        "@types/htmlparser2": "^3.10.3",
        "@types/jest": "^27.0.3",
        "@types/node": "^16.11.10",
        "@types/ps-tree": "^1.1.1",
        "@types/request-promise-native": "^1.0.18",
        "@types/rimraf": "^3.0.2",
        "@types/semver": "^7.3.9",
        "@types/sinon": "^10.0.6",
        "@types/tough-cookie": "^4.0.1",
        "@types/underscore": "^1.11.3",
        "@types/ws": "^8.2.0",
        "@typescript-eslint/eslint-plugin": "5.4.0",
        "@typescript-eslint/parser": "5.4.0",
        "basic-auth-parser": "^0.0.2",
        "body-parser": "^1.19.0",
        "commitlint": "^13.2.1",
        "csv-parse": "^4.16.0",
        "eslint": "^8.2.0",
        "express": "^4.17.1",
        "fpcollect": "^1.0.4",
        "fpscanner": "^0.1.5",
        "fs-extra": "^10.0.0",
        "gen-esm-wrapper": "^1.1.3",
        "husky": "^7.0.4",
        "jest": "^27.1.1",
        "lerna": "^4.0.0",
        "lint-staged": "^11.2.4",
        "playwright": "1.17.1",
        "portastic": "^1.0.1",
        "proxy": "^1.0.2",
        "puppeteer": "10.4.0",
        "sinon": "^12.0.1",
        "sinon-stub-promise": "^4.0.0",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.4.0",
        "turbo": "^1.0.28",
        "typescript": "4.5.4",
        "ua-parser-js": "^1.0.1",
        "why-is-node-running": "^2.2.0"
    }
}

{
    "extends": "../../../tsconfig.json",
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "declaration": true,
        "useDefineForClassFields": false,
        "experimentalDecorators": true,
        "lib": ["es2018", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "removeComments": true,
        "sourceMap": false,
        "strictNullChecks": true,
        "target": "es2018",
        "outDir": "./dist",
        "esModuleInterop": true
    },
    "exclude": [
        "./dist"
    ]
}
